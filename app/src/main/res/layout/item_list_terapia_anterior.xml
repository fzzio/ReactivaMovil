<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="#80CBC4"
    android:id="@+id/layoutListTerapiasAnteriores">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvfechaTeraAnte"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#1c3651"
            android:textStyle="bold"
            android:text="15 jul. 2017"
            android:layout_marginStart="13dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tvTerapistaTerapiaAnte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#1c3651"
            android:textStyle="bold"
            android:text="Daniel Garcia"
            android:layout_marginStart="81dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/tvfechaTeraAnte" />


        <ImageView
            android:id="@+id/imgVerTerapia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/view_therapy"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="38dp"
            android:layout_alignTop="@+id/tvTerapistaTerapiaAnte" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFF"
        android:id="@+id/view"></View>

</LinearLayout>