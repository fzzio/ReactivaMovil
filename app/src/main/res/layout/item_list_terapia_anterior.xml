<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:id="@+id/layoutListTerapiasAnteriores">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvfechaTeraAnte"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.30"
            android:gravity="center"
            android:textColor="#1c3651"
            android:textStyle="bold"
            android:text="15 jul. 2017" />

        <TextView
            android:id="@+id/tvTerapistaTerapiaAnte"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:paddingLeft="10dp"
            android:gravity="left|center_vertical"
            android:textColor="#1c3651"
            android:textStyle="bold"
            android:text="Daniel Garciaa"
            android:maxLines="1"
            android:ellipsize="end"/>

        <ImageView
            android:id="@+id/imgVerTerapia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/view_therapy"
            android:layout_margin="5dp"
            android:layout_weight="0.20"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#FFF"
        android:id="@+id/view"/>

</LinearLayout>