<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layoutListTerapiasAnteriores">


    <TextView
        android:id="@+id/tvfechaTeraAnte"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#1c3651"
        android:textStyle="bold"
        android:text="15 jul. 2017"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvterapistaTeraAnte"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#1c3651"
        android:textStyle="bold"
        android:text="Daniel Garcia"
        android:layout_marginStart="13dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/tvfechaTeraAnte" />

    <TextView
        android:id="@+id/tvcomentTeraAnte"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#1c3651"
        android:textStyle="bold"
        android:text="@string/parrafo_prueba"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/tvterapistaTeraAnte" />

    <TextView
        android:id="@+id/tvgallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#1c3651"
        android:textStyle="bold"
        android:text="GALLERIA FOTOS"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFF"
        ></View>
</RelativeLayout>