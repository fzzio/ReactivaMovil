<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/colorMoradoOscuro"
    android:animateLayoutChanges="true">

    <ImageView
        android:id="@+id/image_profile_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="21dp"
        app:srcCompat="@drawable/profile_f" />

    <TextView
        android:id="@+id/txt_temporizador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/image_profile_pic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:text="TextView"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="TextView"
        android:textSize="36sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/image_profile_pic"
        android:layout_alignStart="@+id/txt_temporizador" />

    <Button
        android:id="@+id/buttonShowCustomDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:layout_marginEnd="10dp"
        android:text="Agegar Comentario"
        android:layout_alignBottom="@+id/txtName"
        android:layout_alignParentEnd="true" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@color/colorRosado">

        <TextView
            android:id="@+id/txt_hora"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/hour_1"
            android:textAlignment="center"
            android:textSize="40sp"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/imageViewProfile"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_marginTop="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/profile_f" />

        <ImageView
            android:id="@+id/imageViewStop"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="500dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@mipmap/stop"
            android:layout_marginStart="500dp" />

        <ImageView
            android:id="@+id/imageViewPause"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="500dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@mipmap/pause"
            android:layout_marginStart="500dp" />

        <ImageView
            android:id="@+id/imageViewComment"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_marginTop="210dp"
            android:layout_marginLeft="500dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@mipmap/comment"
            android:layout_marginStart="500dp" />

        <ImageView
            android:id="@+id/imageViewGallery"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_marginTop="290dp"
            android:layout_marginLeft="500dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@mipmap/gallery"
            android:layout_marginStart="500dp" />

        <ImageView
            android:id="@+id/imageViewViewTherapy"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@mipmap/view_therapy"
            android:layout_marginStart="25dp" />

        <TextView
            android:id="@+id/txtNameDetalle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="240dp"
            android:text="@string/section_1"
            android:textAlignment="center"
            android:textSize="28sp"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.05" />

        <TextView
            android:id="@+id/txtEdadDetalle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="268dp"
            android:text="@string/item_12"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.05" />

        <TextView
            android:id="@+id/txtSalaDetalle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="293dp"
            android:text="@string/item_13"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.05" />

        <ImageView
            android:id="@+id/imageViewBrazo"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_marginTop="313dp"
            android:layout_marginLeft="150dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@mipmap/cuerpo_brazo_der"
            android:layout_marginStart="150dp" />

        <ImageView
            android:id="@+id/imageViewColumna"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_marginTop="313dp"
            android:layout_marginLeft="250dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@mipmap/cuerpo_columna"
            android:layout_marginStart="250dp" />

        <ImageView
            android:id="@+id/imageViewBrazoIzq"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_marginTop="313dp"
            android:layout_marginLeft="350dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@mipmap/cuerpo_brazo_izq"
            android:layout_marginStart="350dp" />
    </android.support.constraint.ConstraintLayout>

</RelativeLayout>

