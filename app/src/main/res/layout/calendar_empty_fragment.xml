<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/calendar_empty_fragment"
    tools:context="reactiva.reactivamovil.fragments.CalendarEmptyAppointmentFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="550dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@color/colorBlanco">

            <TextView
                android:id="@+id/empty_selected_date_txv"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:textAlignment="center"
                android:text="Viernes, 1 jul. 2017"
                android:textColor="@color/colorMoradoMedio"
                android:textStyle="normal"
                android:textSize="18dp"
                android:layout_alignParentBottom="true" />

            <ImageView
                android:id="@+id/calendar_empty_close_imv"
                android:gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_marginEnd="2dp"
                android:src="@drawable/calendar_close_button" />
        </RelativeLayout>

        <TextView
            android:id="@+id/empty_appointment_txv"
            android:layout_width="550dp"
            android:layout_height="530dp"
            android:layout_gravity="center"
            android:text=" NO HAY CITAS\nPROGRAMADAS"
            android:textColor="@color/colorMoradoOscuro"
            android:background="@color/colorMoradoOpaco"
            android:gravity="center"
            android:textSize="40sp" />
    </LinearLayout>
</FrameLayout>