<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorAzulMarino">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="19dp"
            android:text="0 Terapias Activas"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_marginLeft="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.802"
            app:layout_constraintHorizontal_bias="1.0" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="19dp"
            android:text="Nueva Terapia"
            android:textAlignment="textEnd"
            android:textColor="@color/colorCeleste"
            android:textSize="16sp"
            android:layout_marginRight="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.802" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAzulOscuro">

        <TextView
            android:id="@+id/editText17"
            android:layout_width="0dp"
            android:layout_height="97dp"
            android:layout_column="0"
            android:layout_marginTop="30dp"
            android:layout_row="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="NO HAY TERAPIAS ACTIVAS"
            android:textAlignment="center"
            android:textColor="@color/colorCeleste"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </GridLayout>
</LinearLayout>