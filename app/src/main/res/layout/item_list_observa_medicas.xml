<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layoutObsMed">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FechaDoc"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/fechaObsMed"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textColor="#1c3651"
            android:textStyle="bold"
            android:text="29 Julio -" />


        <TextView
            android:id="@+id/medicoObsMed"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Dr. Jose Morales: "
            android:textColor="#1c3651"
            android:textStyle="bold" />
    </LinearLayout>

        <TextView
            android:id="@+id/detalleObsMed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/parrafo_prueba2"
            android:textColor="#1c3651"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/FechaDoc" />



</RelativeLayout>