<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frameParametrosJuego"
    tools:context="reactiva.reactivamovil.fragments.FragmentRVParametrosJuegos">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:background="#fff">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="left"
                android:text="PARAMETROS"
                android:textAlignment="viewStart"
                android:textColor="#1c3651"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvX"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.16"
                android:layout_gravity="center"
                android:text="X"
                android:textAlignment="center"
                android:textColor="#1c3651"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/textView13" />

            <TextView
                android:id="@+id/tvY"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.16"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:text="Z"
                android:textAlignment="center"
                android:textColor="#1c3651"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvZ"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.16"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_toStartOf="@+id/tvY"
                android:text="Y"
                android:textAlignment="center"
                android:textColor="#1c3651"
                android:textStyle="bold" />

        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvParametrosJuego"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"/>

    </LinearLayout>

</FrameLayout>
