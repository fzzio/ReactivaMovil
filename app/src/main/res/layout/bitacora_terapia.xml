<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#79cabe"
    tools:context="reactiva.reactivamovil.VerPerfilActivity">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/editText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="#1c3651"
                    android:textSize="20dp"
                    android:text="Erasmo Ricardo Pesantes De Los Monteros"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prox. cita: "
                        android:textStyle="bold"
                        android:textColor="#1c3651"
                        android:textSize="16dp"
                        android:textAlignment="center"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 10 jul. 2017"
                        android:textSize="16dp"
                        android:textColor="#1c3651"
                        android:textAlignment="center"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        app:srcCompat="@drawable/cuerpo_mano_izq" />


                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/cuerpo_mano_der"
                        android:layout_weight="20" />

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/cuerpo_brazo_izq" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/cuerpo_brazo_der" />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/cuerpo_codo_izq" />

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/cuerpo_codo_der" />
                </LinearLayout>

                <Button
                    android:id="@+id/button"
                    style="@android:style/Widget.Material.Button.Borderless"
                    android:background="@drawable/rounded_button"
                    android:layout_width="179dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:elevation="15dp"
                    android:layout_marginBottom="20dp"
                    android:text="Iniciar terapia" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_marginBottom="25dp"
                    android:background="#c0c0c0"
                    ></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginBottom="5dp"
                        android:textStyle="bold"
                        android:textColor="#1c3651"
                        android:textSize="17dp"
                        android:text="Observaciones medicas:"/>


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginBottom="20dp"
                        android:id="@+id/frameObMed">

                        <ScrollView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">


                            <android.support.v7.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/rvObsMedicas" />


                        </ScrollView>

                    </FrameLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#FFF"
                        ></View>



                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#FFF"
                        ></View>



                </LinearLayout>


            </LinearLayout>

</LinearLayout>